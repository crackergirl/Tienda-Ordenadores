@model TiendaOrdenadoresDB.Models.OrdenadorComponente

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>¿Estas seguro?</h3>
<div>
    <h4>OrdenadorComponente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ordenador)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Ordenador.NumeroDeSerie + " - " + Model.Ordenador.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Componente)
        </dt>
        <dd class="col-sm-10">
            @(Model.Componente.NumeroDeSerie + " - " + Model.Componente.Description)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Edit" asp-controller="Ordenadores" asp-route-id="@Model.OrdenadorId">Back to List</a>
    </form>
</div>