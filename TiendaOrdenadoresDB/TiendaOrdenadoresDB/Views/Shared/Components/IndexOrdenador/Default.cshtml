@model IEnumerable<TiendaOrdenadoresDB.Models.Ordenador>
@using TiendaOrdenadoresDB.ViewModels

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de ordenadores</h1>

@(await Component.InvokeAsync("CreateLink"))

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDeSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calor)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroDeSerie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calor)
                </td>
                <td>
                    @{
                        var linkInfo = new LinksInfo()
                        {
                            Controller = "Ordenadores",
                            Id = item.Id
                        };
                    }
                    @(await Component.InvokeAsync("Links", linkInfo))
                </td>
            </tr>
        }
    </tbody>
</table>
