@model IEnumerable<TiendaOrdenadoresDB.Models.Pedido>
@using TiendaOrdenadoresDB.ViewModels

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Pedidos</h1>

@(await Component.InvokeAsync("CreateLink"))


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Numero de ordenadores
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @item.OrdenadorPedido.Count
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calor)
                </td>
                <td>
                    @{
                        var linkInfo = new LinksInfo()
                        {
                            Controller = "Pedidos",
                            Id = item.Id
                        };
                    }
                    @(await Component.InvokeAsync("Links", linkInfo))
                </td>
            </tr>
        }
    </tbody>
</table>